<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.CheckBoxTheme" parent="android:Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/teal_700</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipSpacing">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="textStartPadding">7dp</item>
        <item name="textEndPadding">7dp</item>
        <item name="android:textSize">10sp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipCornerRadius">9dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="TextHeader">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextHeader2">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeader3">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent2">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/warning</item>
    </style>

    <style name="TextHint">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/hint</item>
    </style>


    <style name="cardFeed" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CommonButton">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="fontFamily">@font/montserrat_500</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="CommonButton2" >
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/montserrat_500</item>
        <item name="fontWeight">500</item>
        <item name="height">50dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="borderWidth">2dp</item>
    </style>

</resources>